<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainM23Activity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#DD4242"
                android:gravity="center_vertical"
                android:text="ENTIRE APARTMENT" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="$27/night (34)" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView1"
                android:background="@drawable/image1" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#202020"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Check in                 Check out                       Guests" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="460dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView19"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#215E56"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="0dp"
                android:text="        January 25             January 27                     2 guests" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="450dp"
                android:layout_height="140dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-10dp"
                android:background="@drawable/tron"
                android:layout_marginTop="0dp"
                android:text="     This is a work trip" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView20"
                android:layout_alignStart="@+id/textView21"
                android:layout_marginStart="300dp"
                android:layout_marginTop="30dp"
                android:text="" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/textView21"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="#242424"
                android:text="FEE and TAX DETAILS" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="272dp"
                android:layout_height="152dp"
                android:layout_below="@+id/textView22"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="$41 x 1 night \n\n Cleaning fee \n\n Service fee" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:layout_below="@+id/textView22"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView23"
                android:text=" $ 41 \n\n $ 27 \n\n $ 10" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="460dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView23"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-10dp"
                android:textColor="#141414"
                android:textSize="25dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/tron"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="     Total(USD)                        $ 79" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView24"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#2B5F58"
                android:gravity="center_vertical"
                android:text="House rules, Cancellation policy"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView24"
                android:layout_toEndOf="@+id/textView26"
                android:background="@drawable/book1" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView26"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#2B5F58"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="20dp" />


        </RelativeLayout>


    </ScrollView>

    <Button
        android:id="@+id/buttonReserve"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="25dp"
        android:background="@drawable/trontren"
        android:textColor="#FFFFFF"
        android:text="Reserve" />



</RelativeLayout>