<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="  Reviews" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/imageView1"
                android:gravity="center_vertical"
                android:text="4.78"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="251 reviews"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/botron"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:textColor="#000000"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/imageView1"
                android:text=" Communication \n\n Check-in \n\n Accuracy \n\n Cleanliness \n\n Location \n\n Value"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_below="@+id/imageView1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textView4"
                android:gravity="center_vertical"
                android:text=" 4.9 \n\n 4.9 \n\n 4.8 \n\n 4.8 \n\n 4.7 \n\n 4.8"
                android:textColor="#000000"
                android:textSize="15dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/girl"
                android:layout_below="@+id/textView4"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView5"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="Kara"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="January 2020"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_below="@+id/profile_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="Trump immediately managed to hobble Obamacare – one of the biggest achievements of his previous, President Obama. The action made public opinion break out, and people not only in the USA"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Response from the host"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView11T"
                android:layout_width="290dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:text="President Donald Trump has grabbed the headlines of many magazines regardless inside or outside the USA "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_below="@+id/textView11T"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vien"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/image11"
                android:layout_below="@+id/textView11"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView11"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="Gnart"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView12"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="January 2020"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView14T"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_below="@+id/profile_image1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="The press acknowledged that he is hobbling China because this nation’s economy is getting bigger and might gulp his USA down in a near future."
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_below="@+id/textView14T"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/vien"
                android:text=""
                android:textSize="15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/anh8"
                android:layout_below="@+id/textView14"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView14"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="S1mple"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView15"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView2"
                android:gravity="center_vertical"
                android:text="January 2020"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_below="@+id/profile_image2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="It is not wrong for people to say that he is evil, but he just does the right things and protects the Americans."
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_marginStart="160dp"
                android:layout_marginTop="30dp"/>


        </RelativeLayout>


    </ScrollView>



</RelativeLayout>