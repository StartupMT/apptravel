<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Type of place" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Entire place" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Private room" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Hotel" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox3"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Share room" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_below="@+id/checkBox4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Price range: (USD)" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:text="           Min                                   Max"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="98dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/editText"
                android:gravity="center_vertical"
                android:text="   -"
                android:textSize="50dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView4"
                android:ems="10"
                android:inputType="number" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/editText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Room and beds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="  Beds" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="117dp"
                android:layout_height="79dp"
                android:layout_below="@+id/textView5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView6"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="   Bedrooms" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="117dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView6"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView7"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="  Bathrooms" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="117dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView8"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Amenities"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView9"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Kitchen" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox5"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Washer" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox6"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Wifi" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox7"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Indoor fireplace" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox8"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Smoke detactor" />

            <TextView
                android:id="@+id/textView10T"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Verified places"
                android:textSize="25dp"/>



            <Switch
                android:id="@+id/switch1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView10T"
                android:text="Instant Book" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/switch1"
                android:text="Airbnb Plus" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/switch2"
                android:text="Airbnb Luxe" />



            <TextView
                android:id="@+id/textView10"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/switch3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Facilities"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView10"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Gym" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox10"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Free parking" />

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox11"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="          Hot tub" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_below="@+id/checkBox12"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text=""
                android:textSize="25dp"/>




        </RelativeLayout>


    </ScrollView>


    <Button
        android:id="@+id/buttonShow"
        android:layout_width="354dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/trontren"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Show" />

</RelativeLayout>