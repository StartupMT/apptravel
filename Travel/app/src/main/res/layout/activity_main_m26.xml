<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank1"
    tools:context=".MainM26Activity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textColor="#E78500"
        android:text="You make a successful transation"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:text="Account number / Bank name"
        android:textColor="#0A0A0A"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="     3427197890122 / American Bank"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Beneficiary name"
        android:textColor="#0A0A0A"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="     Airbnb Corp"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Content transfer"
        android:textColor="#0A0A0A"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="     Code: 3427197"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Tranfer amount / Transation fee"
        android:textColor="#0A0A0A"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="     $79         /     $1"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView9"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thank you for using the service"
        android:textColor="#E78500"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/botron"
        android:text="Share"
        android:textAllCaps="false"
        android:textColor="#E78500"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonOther"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/button"
        android:background="@drawable/botron"
        android:text="Other transactions"
        android:textAllCaps="false"
        android:textColor="#E78500"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/visa" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="270dp"
        android:background="@drawable/qr" />


</RelativeLayout>